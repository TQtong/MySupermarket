                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="25"
                                            Height="25"
                                            Margin="10"
                                            VerticalAlignment="Center"
                                            Kind="ViewDashboard" />
                                        <TextBlock
                                            Margin="20,10"
